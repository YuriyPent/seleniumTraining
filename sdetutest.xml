<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite" parallel="tests">
    <test verbose="2" preserve-order="true"
          name="Smoke Test: Login Page">
        <classes>
            <class name="smoketests.LoginPresentTestNG">
                <methods>
                    <include name="LoginElementsPresentTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Smoke Test: Page Title">
        <classes>
            <class name="smoketests.PageTitleJUnit">
                <methods>
                    <include name="pageTitleTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Smoke Test: Home Page">
        <classes>
            <class name="smoketests.ATagsTest">
                <methods>
                    <include name="LoginElementsPresentTest"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>